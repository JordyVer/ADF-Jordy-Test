{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "CosmosDb1",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "sort1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          Created as string,",
				"          Name as string,",
				"          UserId as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     format: 'document',",
				"     container: 'Users',",
				"     store: 'cosmosDB') ~> source1",
				"source1 sort(asc(UserId, true)) ~> sort1"
			]
		}
	}
}